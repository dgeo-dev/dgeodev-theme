// variables
$color-primary:#333;
$font-size:1rem;
$spacing:1rem;

// screens
$screen-small: 576px;
$screen-medium: 768px; 
$screen-large: 1024px;
$screen-xlarge: 1200px;

// icons 
.fas {
  font-size:$font-size * 1.4;
} 

// structure

.container {
  padding:$spacing;
  max-width:1200px;
  margin:0 auto;
}
.section-title {
  text-align: center; 
  font-size:2rem;
  margin:$spacing $spacing * 1.3;
}
.rte {
  margin-bottom:$spacing;
}

// generic 
* {
  box-sizing: border-box;  
  outline: none;
}

body {
  font-family: Arial, Helvetica, sans-serif;
  font-size:$font-size;
  color:$color-primary;    
}

h1 { font-size:2rem; margin-bottom:$spacing; }
h2 { font-size:1.6rem; margin-bottom:$spacing; }
h3 { font-size:1.4rem; margin-bottom:$spacing; }
h4 { font-size:1.2rem; margin-bottom:$spacing; }

a {
  text-decoration: none;
}
p {
  margin-bottom: $spacing;
}

img { max-width:100%; }

button:hover {
  cursor: pointer;
}

.btn {
  display: inline-block;
  padding: $spacing;
  background:rgb(0, 0, 0);  
  color:rgb(255, 255, 255);
  text-transform: uppercase;
}

iframe {
  width:100%;
  height:100vh;
}

.header {
  background: #EEE;  
  top:-300px;
  min-height:52px;
  display:flex;
  align-items:center;  
  padding:$spacing / 2;
  button, a {
    background: none;
    border:none;
    color:$color-primary;
  }
}

.header-navbar {
  display: flex;
  min-width:90px;
  flex:1;
}

.navbar-toggler {
  cursor:pointer;
}

.navbar {
  width:0;
  height:0;
  visibility: hidden;
  z-index: 999;  
  display:block;
  position:absolute;
  top:-300px;
  left:0;
  transition: all 0.5s;
  .navbar-item {
    display: block;
    padding:$spacing;
  }  
}
.navbar.open { 
  visibility: initial; 
  width:100%;
  height: calc(100% - 52px);
  top:52px; 
  background: #EEE;
}
.header-brand {
  display:flex;  
  justify-content: center;
}
.header-icons {
  flex:1;
  min-width:90px;
  display: flex;
  justify-content: flex-end;
  a, button {
    padding:10px;
    margin-left:2px;
    cursor: pointer;
  }
}
.searchbox-content {
  display:none;
  position: absolute; 
  width:100%;
  left:0;
  top:0;
  z-index:9999;
  padding:10px;
  min-height:52px;
  background:#FFF;
  justify-content: space-between;
  box-shadow: 0 5px 5px rgba(0,0,0,0.2);
  &.show {
    display:flex;  
  }  
  .search-bar {
    width:100%;
    display:block;
    border:1px solid #EEE;
  }
  .search-group {   
    height:100%; 
    display:flex;
    justify-content: space-between;    
  }
  .search-input {    
    border:none;
    padding:4px;
    font-size:$font-size * 1;
  }
  .search-btn {   
    padding:4px;
    font-size:$font-size * 1.5;
  }
  .btn-close {
    min-width: 45px;
    text-align: center;
  }
}

// slider
.splide__slide {
  position: relative;
}
.splide__content {
  position: absolute;
  top:50%;
  transform: translateY(-50%);
  text-align: center;
  width:100%;
  color:#FFF;
  .splide__title {
    font-size: $spacing * 1.3;
  }
  .splide__btn {
    display: inline-block;
    padding: $spacing / 2;
    background:#FFF;  
    color:#333;
  }
}

// image with text
.feature-item {
  padding:$spacing;
  text-align: center;
}

// collection-list
.collection-item a {
  color:#333;
}
.collection-title {
  text-align: center;
  padding:$spacing;
  
}

// featured-collection

.grid {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap; 
  .grid-item {
    padding: $spacing;
    flex:1 0 50%;
  }
}
@media screen and (min-width:$screen-medium) {
  .grid {
    .grid-item {    
      flex:1 0 25%; 
    }
  }
}

.product {
  .product-image {
    margin-bottom: $spacing;
  }
  .product-title {
    font-size: 1.2rem;
  }
  a {
    color:$color-primary;
  }
}



.footer {
  background-color: #EEE;
}
.footer-item {
  padding:$spacing; 

}
.footer-copyright {
  text-align: center; 
  padding:$spacing;  
}

@media screen and (min-width:$screen-medium) {
  .btn {
    padding:$spacing * 1.3;
    font-size:$font-size * 1.3;
  }
  .navbar-toggler {
    display: none;
  }
  .navbar {
    position: relative;
    left:0;
    top:auto;
    height: auto;
    visibility: initial;
    transition:none;
    width: 100%;
    .navbar-item {
      display: inline-flex;
      padding:10px;      
    }
  }
  // slider
  .splide__content {
    
      font-size:$font-size * 1.3; 
    
    .splide__title { 
      font-size:$font-size * 3;
    }
    .splide__btn { 
      padding:$spacing / 1.5 $spacing;
    }
  }
  // image with text
  .feature-row {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: nowrap;
  }
  .feature-item {
    flex:1 0 50%;
    display: flex;
    justify-content: center;   
    flex-direction: column; 
  }
  .feature-item__img {
    order:1;    
    .align-right & {
      order:2;
    }
  }
  .feature-item__text {
    order:2;
    .align-right & {
      order:1;
    }
  }
  // collection list
  .collection-list {
    display: flex;
    justify-content: space-around;
    align-items: center;
  }
  .collection-item {
    padding:$spacing;
  }

  // footer
  .footer-content {
    display:flex; 
    flex-wrap: wrap;
    align-items: center;
  }
  .footer-item {    
    display: flex;
    flex-direction: column; 
    flex:1 0 33.33%; 
  }
}
