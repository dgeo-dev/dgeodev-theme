// variables
$color-primary:#333;
$font-size:1rem;
$spacing:1rem;

// screens
$screen-small: 576px;
$screen-medium: 768px; 
$screen-large: 1024px;
$screen-xlarge: 1200px;

// icons 
.fas {
  font-size:$font-size * 1.4;
} 

// structure
.container {
  padding:$spacing;
  max-width:1200px;
  margin:0 auto;
}
.section-title {
  text-align: center; 
  font-size:2rem;
  margin:$spacing $spacing * 1.3;
}
.rte {
  margin-bottom:$spacing;
}

// generic 
* {
  box-sizing: border-box;  
  outline: none;
}

body {
  font-family: Arial, Helvetica, sans-serif;
  font-size:$font-size;
  line-height: 1.6;
  color:$color-primary;  
}

h1 { font-size:2rem; margin-bottom:$spacing; }
h2 { font-size:1.6rem; margin-bottom:$spacing; }
h3 { font-size:1.4rem; margin-bottom:$spacing; }
h4 { font-size:1.2rem; margin-bottom:$spacing; }

a {
  text-decoration: none;
}
p {
  margin-bottom: $spacing;
}
select { min-width: 260px; }
select, input[type=number] {
  padding:8px 5px; 
}
input[type=number] {
  max-width:60px;
}
hr {
  margin:$spacing * 2 auto;
}
img { max-width:100%; }

button:hover {
  cursor: pointer;
}
.read-more {
  margin-bottom: $spacing;
}
.btn {
  display: inline-block;
  padding: $spacing / 1.5;
  background:rgb(0, 0, 0);  
  color:rgb(255, 255, 255);
  text-transform: uppercase;
  border:none;
  font-size:1.1rem;
  cursor: pointer; 
  border-radius: 3px; 
}
.btn--small {
  font-size: $font-size / 1.2;
}
.btn-secondary {
  text-transform: initial;
  background:#EEE;
  color:$color-primary;
  font-size:1rem;
}
.add_to_cart, .btn-primary {
  @extend .btn;
  
  background-color: rgb(15, 160, 15);
  i {
    font-size:1rem;
    margin-right:7px;
  }
}

@media screen and (min-width:$screen-medium) {
  .btn {
    
    font-size:$font-size * 1.3;
  }
  
}

iframe {
  width:100%;
  height:100vh;
}

.errors {
  color:red;
  border:1px solid red;
  padding:$spacing;
  margin-bottom: $spacing;
}

// titles
.title {
  text-align: center;
}

@media screen and (min-width:$screen-medium) {
  .title {
    text-align: left;
  }
}

// grids
.grid {
  display: flex;
  justify-content: center; 
  flex-wrap: wrap; 
  .grid-item {

    width:100%;
    padding: $spacing;
    .collection & {
      text-align: center;
      flex:1 0 50%;
    }
  }
}
@media screen and (min-width:$screen-medium) {
  .grid {
    .grid-item {  
      .product & {
        flex:1 0 50%;  
      }
      .collection & { 
        flex:1 0 25%; 
      }
    }
  }
}

.header {
  background: #EEE;  
  top:-300px;
  min-height:52px;
  display:flex;
  align-items:center;  
  padding:$spacing / 2;
  button, a {
    background: none;
    border:none;
    color:$color-primary;
  }
}

.header-navbar {
  display: flex;
  min-width:90px;
  flex:1;
}

.navbar-toggler {
  cursor:pointer;
}

.navbar {
  width:0;
  height:0;
  visibility: hidden;
  z-index: 999;  
  display:block;
  position:absolute;
  top:-300px;
  left:0;
  transition: all 0.5s;
  .navbar-item {
    display: block;
    padding:$spacing;
  }  
}
.navbar.open { 
  visibility: initial; 
  width:100%;
  height: calc(100% - 52px);
  top:52px; 
  background: #EEE;
}
.header-brand {
  display:flex;  
  justify-content: center;
}
.header-icons {
  flex:1;
  min-width:90px;
  display: flex;
  justify-content: flex-end;
  a, button {
    position: relative;
    padding:10px;
    margin-left:2px;
    cursor: pointer;
  }
  .cart-count {
    position: absolute;
    right: 3px;
    top:3px;
    background:rgba(255,0,0,0.7);
    color:#FFF;
    display: inline-block;  
    width: 20px; 
    height: 20px;
    text-align: center;
    font-size: 12px;
    border-radius: 100%;
  }
}

@media screen and (min-width:$screen-medium) {
  .navbar {
    position: relative;
    left:0;
    top:auto;
    height: auto;
    visibility: initial;
    transition:none;
    width: 100%;
    .navbar-item {
      display: inline-flex;
      padding:10px;      
    }
  } 
  .navbar-toggler {
    display: none;
  } 
}  

.searchbox-content {
  display:none;
  position: absolute; 
  width:100%;
  left:0;
  top:0;
  z-index:9999;
  padding:10px;
  min-height:52px;
  background:#FFF;
  justify-content: space-between;
  box-shadow: 0 5px 5px rgba(0,0,0,0.2);
  &.show {
    display:flex;  
  }  
  .search-bar {
    width:100%;
    display:block;
    border:1px solid #EEE;
  }
  .search-group {   
    height:100%; 
    display:flex;
    justify-content: space-between;    
  }
  .search-input {    
    border:none;
    padding:4px;
    font-size:$font-size * 1;
  }
  .search-btn {   
    padding:4px;
    font-size:$font-size * 1.5;
  }
  .btn-close {
    min-width: 45px;
    text-align: center;
  }
}

// slider
.splide__slide {
  position: relative;
}
.splide__content {
  position: absolute;
  top:50%;
  transform: translateY(-50%);
  text-align: center;
  width:100%;
  color:#FFF;
  .splide__title {
    font-size: $spacing * 1.3;
  }
  .splide__btn {
    display: inline-block;
    padding: $spacing / 2;
    background:#FFF;  
    color:#333;
  }
  
}
.splide__arrow {
  background:none;
  width:auto;
  height:auto;
  svg {
    width:25px;
    height:25px;
    fill:#EEE;
  }
}
.splide__slide {
  cursor: pointer;
}
.splide__arrow--prev {
  left: 1.5em;
}
.splide__arrow--next {
  right: 1.5em;
}
.splide--nav > .splide__track > .splide__list > .splide__slide.is-active {
  border-color: #DDD;
}
.splide__pagination {
  display:none;
}
.splide-primary {
  margin-bottom: 10px;
}
@media screen and (min-width:$screen-medium) {
  .splide__content {      
    font-size:$font-size * 1.3; 
    .splide__title { 
      font-size:$font-size * 3;
    }
    .splide__btn { 
      padding:$spacing / 1.5 $spacing;
    }
  }
  .splide__arrow  svg {
      width:45px;
      height:45px;      
    
  }
}

// image with text
.feature-item {
  padding:$spacing;
  text-align: center;
}
@media screen and (min-width:$screen-medium) {
  .feature-row {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: nowrap;
  }
  .feature-item {
    flex:1 0 50%;
    display: flex;
    justify-content: center;   
    flex-direction: column; 
  }
  .feature-item__img {
    order:1;    
    .align-right & {
      order:2;
    }
  }
  .feature-item__text {
    order:2;
    .align-right & {
      order:1;
    }
  }
}

// collection-list
.collection-list {
  display: flex;
  flex-wrap: nowrap;
  overflow-x: auto;
}
.collection-item {
  width:75vw;
  flex:1 0 75vw;
  padding-left:30px;
  h3 {
    margin-bottom:0;
  }
  a {
  color:#333;
  }
}  
.collection-title {
  text-align: center;
  padding:$spacing;  
}
@media screen and (min-width:$screen-medium) {
  
  .collection-item {
    width:auto;
    flex:1 0 33%;    
    padding:$spacing;
  }
}

// pages
.breadcrumb {
  display:none;
}
@media screen and (min-width:$screen-medium) {
  .breadcrumb {
    display:block;
    margin-bottom:$spacing; 
  }
}

.contact-form {
  .main-content & {
    display:flex; 
    flex-direction: column;
    label {
      text-transform: capitalize;
    }
    input, textarea {
      padding:$spacing / 2;
      margin:$spacing / 2 0 $spacing 0;
    }
    .btn {
      padding:$spacing;
    } 
  } 
}

.comment {
  padding:$spacing;
  margin-bottom:$spacing;
  border:1px solid #DDD;
}
.comment-form {
  display: flex;  
  flex-direction: column;
  input, textarea {
    padding:$spacing / 2;
    margin:$spacing / 2 0 $spacing 0;
  }
  
  textarea {
    margin-bottom:$spacing;
  }
}

.product {
  .product-images {
    
    .splide-secondary {
      padding:0 $spacing;
    }
  }
  
  .product-image {
    margin-bottom: $spacing;
  }
  .product-title {
    font-size: 1.2rem;
  }
  a {
    color:$color-primary;
  }
  .product-price {
    color:#FF5500;
    font-size: 1.2rem;
  }
  .product-variants, .product-quantity, .add_to_cart {
    margin-bottom:$spacing;
  }
}

// blog et articles
.article {
  .article-meta {
    color:#666;
    font-style: italic;
  }
  .btn {
    margin-bottom: $spacing;
  }
}

.search-form {
  display: flex;
  justify-content: space-between;
  border:1px solid #EEE;
  padding:$spacing;
  margin-bottom: $spacing;
  h4 a {
    color: $color-primary;
  }
    input[type="search"] {
      width: 70%;;
      padding:9px;
    }
    .btn {
      width: 30%;
    }
 
}

.cart-form {
  .cart-row {
    display: flex;
    justify-content: space-between;
  }
  .cart-item {
    padding:$spacing $spacing $spacing 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .cart-item--title {
    padding: $spacing;
  }
  .cart-subtotal {
    display: flex;
    align-items: flex-end;
    flex-direction: column;
    .btn {
      margin-bottom: $spacing;
    }
  }
  
}

.paginate {
  padding:10px 0;
  .page {
    padding:10px 15px;
    border:1px solid #DDD;
    &.current {
      border:1px solid #666;
    }
  }
}

.footer {
background-color: #EEE;
 
  .contact-form {
    input[type="email"] {
      padding:9px;
    }
  }
  .footer-item {
  padding:$spacing; 

  .link-item {
    padding:5px 0;
      a {
        color:$color-primary;
      }
    }
  }
}
.footer-copyright {
  text-align: center; 
  padding:$spacing;  
}

@media screen and (min-width:$screen-medium) {
  .footer-content {
    display:flex; 
    flex-wrap: wrap;
    align-items: center;
  }
  .footer-item {    
    display: flex;
    flex-direction: column; 
    flex:1 0 33.33%; 
  }
}


